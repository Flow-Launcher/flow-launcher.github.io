---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
---
<Layout title="Not Found | Flow Launcher" description="Page not found.">
  <Section padding="110">
    <div class="error-code">404</div>
    <div class="error-message">Page not found.</div>
    <p class="error-actions">
      <a href="javascript:history.back()">Go back</a>
      or
      <a href="/">go to the homepage</a>.
    </p>
  </Section>
</Layout>

<style>
.error-code {
    font-size: 96px;
    font-weight: 900;
    text-align: center;
}

.error-message {
    font-size: 24px;
    font-weight: 500;
    text-align: center;
    margin: 16px 0 48px;
}

.error-actions {
    text-align: center;
}
</style>
