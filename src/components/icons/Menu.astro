---
interface Props {
    class?: string;
}
const {
    class: className = "",
    ...rest
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  stroke="currentColor"
  class:list={["menu-icon", className]}
  {...rest}
>
    <path  d="M4 9 L20 9 M4 15 L20 15"/>
</svg>

<style>
.menu-icon path {
    stroke-width: 2;
    transition: d 0.2s;
}
.menu-icon.open path {
    d: path('M18 6 L6 18 M6 6 L18 18');
}
</style>
